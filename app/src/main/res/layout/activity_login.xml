<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <TextView
            android:text="@string/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLoginTitle"
            android:textColor="@color/text_primary"
            android:textSize="35sp"
            android:layout_marginTop="112dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:fontFamily="@font/audiowide"/>
    <EditText
            android:layout_width="276dp"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Email"
            android:paddingLeft="15dp"
            android:background="@drawable/edit_text_stroke"
            android:id="@+id/login_et_email" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/tvLoginTitle" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
    <EditText
            android:layout_width="276dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@drawable/edit_text_stroke"
            android:hint="password"
            android:paddingLeft="15dp"
            android:id="@+id/login_et_password" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/login_et_email" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            app:layout_constraintEnd_toEndOf="@+id/login_et_password"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/login_et_password"/>
    <TextView
            android:text="@string/go_to_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/tv_to_register" android:layout_marginTop="172dp"
            app:layout_constraintTop_toBottomOf="@+id/login_et_password" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/text_primary"
            app:fontFamily="@font/allerta"/>
</android.support.constraint.ConstraintLayout>