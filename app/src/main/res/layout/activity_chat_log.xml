<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChatLogActivity">
    <android.support.v7.widget.RecyclerView
            android:id="@+id/chat_log_recycler"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="667dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="290dp"
            android:layout_height="59dp"
            android:inputType="textPersonName"
            android:text=""
            android:paddingLeft="15dp"
            android:ems="10"
            android:background="@drawable/edit_text_stroke"
            android:id="@+id/etChatMesage"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"/>
    <Button
            android:text="Send"
            android:layout_width="98dp"
            android:layout_height="49dp"
            android:id="@+id/btnSend"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/etChatMesage"
            app:layout_constraintTop_toTopOf="@+id/etChatMesage"/>
</android.support.constraint.ConstraintLayout>