<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">
    <ImageView
            android:src="@drawable/coder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profileImage" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.463"/>
    <TextView
            android:text="Clike Image to Upload Your Pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUploadImagePointer"
            android:textColor="@color/text_info"
            app:fontFamily="@font/abril_fatface"
            android:layout_marginTop="112dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.417"/>
    <EditText
            android:layout_width="276dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:hint="Username"
            android:ems="10"
            android:background="@drawable/edit_text_stroke"
            android:id="@+id/register_et_username"
            android:paddingLeft="15dp"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/profileImage"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.504"/>
    <EditText
            android:layout_width="276dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:ems="10"
            android:paddingLeft="15dp"
            android:background="@drawable/edit_text_stroke"
            android:id="@+id/register_et_password"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/register_et_email"
            app:layout_constraintEnd_toEndOf="@+id/register_et_email"
            app:layout_constraintStart_toStartOf="@+id/register_et_email" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerButton"
            app:layout_constraintTop_toBottomOf="@+id/register_et_password"
            app:layout_constraintEnd_toEndOf="@+id/register_et_password"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="@string/go_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_go_to_login"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="108dp"
            app:layout_constraintTop_toBottomOf="@+id/register_et_password"
            app:fontFamily="@font/allerta" app:layout_constraintHorizontal_bias="0.493"/>
    <EditText
            android:layout_width="276dp"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Email"
            android:paddingLeft="15dp"
            android:background="@drawable/edit_text_stroke"
            android:id="@+id/register_et_email"
            app:layout_constraintEnd_toEndOf="@+id/register_et_username"
            app:layout_constraintStart_toStartOf="@+id/register_et_username"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/register_et_username"
            app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>